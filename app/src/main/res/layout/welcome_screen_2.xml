<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FC3A52">

    <ImageView
        android:id="@+id/fragment2_image"
        android:layout_alignParentTop="true"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fragment_2_image"/>

    <TextView
        android:id="@+id/fragment2_text1"
        android:layout_below="@+id/fragment2_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/fragment2_text1"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/fragment2_text2"
        android:layout_below="@+id/fragment2_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/fragment2_text2"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:text="2/6"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="#f5586c"
                android:text="Next"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>