<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FC3A52">

    <ImageView
        android:id="@+id/fragment5_image"
        android:layout_alignParentTop="true"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fragment5_image"/>

    <TextView
        android:id="@+id/fragment5_text1"
        android:layout_below="@+id/fragment5_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/fragmentfinal_text1"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/fragment5_text2"
        android:layout_below="@+id/fragment5_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/fragmentfinal_text2"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp" />

</RelativeLayout>